
<section class="gallery grid-container-3 " id="gallery-section">
  <% for(var item of data) {%>
    <div class="item">
      <div class="mycard">
        <div>
          <img src="<%= item.image_thumbnail_url%>" alt="nivel5" class="cardimg" />
        </div>
        <div>
          <p class="cardtitle" onclick="window.location.href = '<%= item.permalink %>' "><%= item.name %></p>
          <p class="carddescription"> <%= item.description %> </p>
          <div class="pricing">
            <img src="/public/media/ethereum-eth-logo.png" class="ethlogo" alt="" srcset="">
            <p class="cardprice"> -- </p>
          </div>
        </div>
        <div style='margin: 10px 0;' id='ed-<%= item.name %>' class='edit-item'> Edit </div>
        <div class="edit-form" id='ed<%= item.name %>' style="display: none;"> 
          <form class="box" action="/update/<%= item.name %>" method="POST" enctype="multipart/form-data">
              <input type="checkbox" name="sold" value="available">
              <label for="available"> Sold </label><br>
              <input type="text" name="name" placeholder="new  name" value="<%= item.name %>" required>
              <input type="text" name="desc" placeholder="new description" value="<%= item.description %>" >
              <input type="number" step="0.001" name="price" placeholder="new price" value="--" required>
              <input type="submit" name="" value="update">
          </form>
        </div>
      </div>
    </div>
  <% } %>
</section>
